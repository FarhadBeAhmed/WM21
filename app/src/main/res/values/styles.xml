<resources>

    <style name="Widget.Theme.WM21.ActionBar.Fullscreen" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>

    <style name="Widget.Theme.WM21.ButtonBar.Fullscreen" parent="">
        <item name="android:background">@color/black_overlay</item>
        <item name="android:buttonBarStyle">?android:attr/buttonBarStyle</item>
    </style>

    <style name="NormalText" parent="Theme.WM21">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textColor">@color/text_color</item>
    </style>

    <style name="AffiliateTitle" parent="NormalText">
        <item name="android:textSize">15sp</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="HorizontalLine" parent="">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">1.5dp</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginBottom">10dp</item>
        <item name="android:background">@color/text_color</item>
    </style>
</resources>