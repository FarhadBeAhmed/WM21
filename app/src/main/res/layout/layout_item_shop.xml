<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_160sdp"
        android:layout_marginHorizontal="5dp"
        android:layout_marginBottom="@dimen/_5sdp"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:orientation="vertical"
        app:cardCornerRadius="8dp"
        app:cardElevation="5dp"
        app:cardMaxElevation="5dp"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:paddingBottom="5dp"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/layoutTop"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_120sdp"
                >
                <ImageView
                    android:id="@+id/shopCoverPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:scaleType="centerCrop"
                    android:src="@drawable/pjimage_4_3"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="@dimen/_15ssp"
                    android:paddingTop="@dimen/_8sdp"
                    tools:ignore="RtlSymmetry">




                    <LinearLayout
                        android:layout_marginTop="@dimen/_8sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="@dimen/_12ssp"
                            android:layout_height="@dimen/_14ssp"
                            android:src="@drawable/building" />

                        <TextView
                            android:id="@+id/shopName"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_14sdp"
                            android:layout_marginStart="5dp"
                            android:gravity="center_vertical"
                            android:text="Area"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9ssp"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_14sdp"
                            android:src="@drawable/telephone" />

                        <TextView
                            android:id="@+id/number"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/_14sdp"
                            android:layout_marginStart="5dp"
                            android:gravity="center_vertical"
                            android:text="Number"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9ssp"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_width="@dimen/_12sdp"
                            android:layout_height="@dimen/_14sdp"
                            android:src="@drawable/globimage" />

                        <TextView
                            android:id="@+id/address"
                            android:layout_width="wrap_content"
                            android:layout_height="18dp"
                            android:layout_marginStart="5dp"
                            android:gravity="center_vertical"
                            android:text="Address"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_9ssp"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>

                </LinearLayout>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/layoutBottom"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_below="@id/layoutTop"
                android:layout_alignParentBottom="true">
                <TextView
                    android:id="@+id/typeName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Showroom Name"
                    android:layout_alignParentEnd="true"
                    android:fontFamily="@font/poppins_bold"
                    android:layout_marginEnd="@dimen/_10sdp"
                    android:layout_centerInParent="true"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_14ssp"


                    tools:ignore="HardcodedText" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/overlapImage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/layoutBottom"
                android:layout_marginStart="@dimen/_22sdp"
                android:layout_marginBottom="-40dp"
                android:adjustViewBounds="true"
                >
                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="100dp"
                    >
                    <RelativeLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/shopImage"
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_70sdp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/ic_blood_bank" />
                    </RelativeLayout>
                </androidx.cardview.widget.CardView>
            </RelativeLayout>




        </RelativeLayout>
    </androidx.cardview.widget.CardView>




</LinearLayout>