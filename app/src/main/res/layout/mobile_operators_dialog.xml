<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/Trans"
    android:layout_marginHorizontal="50dp"

    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        >

        <TextView
            android:id="@+id/opNames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/light_gray"
            android:gravity="center"
            android:text="Select Operator"
            android:textColor="@color/purple_700"
            android:textSize="22sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_below="@+id/opNames"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            >

            <RelativeLayout
                android:id="@+id/opsLayout1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="5dp">

                <RelativeLayout

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:focusable="true"
                    android:clickable="true"
                    android:id="@+id/dialogGPBtnId"
                    >

                    <ImageView
                        android:id="@+id/dialog_gpLogoId"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/gp_logo" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/dialog_gpLogoId"
                        android:layout_centerHorizontal="true"
                        android:text="GP"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout

                    android:id="@+id/dialogRobiBtnId"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true">

                    <ImageView
                        android:id="@+id/dialog_robiLogoId"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/robi_logo2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/dialog_robiLogoId"
                        android:layout_centerHorizontal="true"
                        android:text="Robi"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/dialogBLBtnId"
                    android:focusable="true"
                    android:clickable="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true">

                    <ImageView
                        android:id="@+id/dialog_blLogoId"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/banglalink_logo2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/dialog_blLogoId"
                        android:layout_centerHorizontal="true"
                        android:text="BL"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </RelativeLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/opsLayout2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/opsLayout1"
                android:layout_marginTop="10dp"
                android:paddingHorizontal="5dp">

                <RelativeLayout
                    android:id="@+id/dialogairBtnId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentStart="true"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/dialog_airLogoId"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/airtel_logo2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/dialog_airLogoId"
                        android:layout_centerHorizontal="true"
                        android:text="Airtel"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/dialogTelBtnId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:clickable="true"
                    android:focusable="true">

                    <ImageView
                        android:id="@+id/dialog_telLogoId"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@drawable/teletalk_logo2" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/dialog_telLogoId"
                        android:layout_centerHorizontal="true"
                        android:text="Teletalk"
                        android:textColor="@color/black"
                        android:textStyle="bold" />
                </RelativeLayout>


            </RelativeLayout>

        </RelativeLayout>



    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>