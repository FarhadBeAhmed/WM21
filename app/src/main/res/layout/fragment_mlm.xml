<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".fragments.member.mlm.MlmFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <androidx.cardview.widget.CardView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="5dp"
                android:layout_weight="3"
                app:cardBackgroundColor="@color/primary_red"
                app:cardCornerRadius="@dimen/card_corner_radius">

                <androidx.cardview.widget.CardView
                    android:layout_width="60dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:elevation="10dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="100dp">

                    <ImageView
                        android:id="@+id/userImage"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:padding="10dp"
                        android:src="@drawable/img_logo_red" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="90dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/userInfo"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:text="User"
                        android:paddingEnd="20dp"
                        android:textSize="12sp"
                        android:singleLine="true"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/text_color_invert" />

                    <TextView
                        android:id="@+id/usernameInfo"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:hint="Name"
                        android:paddingEnd="20dp"
                        android:singleLine="true"
                        android:text="Worldmission"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/text_color_invert"
                        android:textSize="15sp"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/balanceInfo"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginVertical="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="2"
                app:cardBackgroundColor="@color/light_blue_A400"
                app:cardCornerRadius="@dimen/card_corner_radius">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="3"
                        android:gravity="bottom"
                        android:paddingHorizontal="20dp"
                        android:text="Balance"
                        android:textSize="12sp"
                        android:fontFamily="@font/poppins_medium"
                        android:textColor="@color/text_color_invert" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="4"
                        android:gravity="center_vertical"
                        android:hint="Balance"
                        android:fontFamily="@font/poppins_medium"
                        android:paddingHorizontal="20dp"
                        android:text="0.0"
                        android:textColor="@color/text_color_invert"
                        android:textSize="15sp" />

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!--                <TextView-->
                <!--                    android:id="@+id/updateAccount"-->
                <!--                    android:layout_width="match_parent"-->
                <!--                    android:layout_height="wrap_content"-->
                <!--                    android:background="@color/primary_red"-->
                <!--                    android:fontFamily="@font/poppins_medium"-->
                <!--                    android:paddingTop="10dp"-->
                <!--                    android:paddingBottom="5dp"-->
                <!--                    android:text="Update Account"-->
                <!--                    android:textAlignment="center"-->
                <!--                    android:textColor="@color/white"-->
                <!--                    android:textSize="18sp" />-->
                <!--                -->

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/socialsRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="10dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:reverseLayout="false"
                    tools:itemCount="6"
                    tools:listitem="@layout/layout_item_socials" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="12dp"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="@dimen/card_corner_radius">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingVertical="10dp">

                        <LinearLayout
                            android:id="@+id/downgradeAccountLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentStart="true"
                            android:layout_centerVertical="true"
                            android:layout_toStartOf="@id/businessAccountLayout"
                            android:paddingHorizontal="15dp"
                            android:paddingVertical="10dp">

                            <ImageView
                                android:id="@+id/downgradeAccount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_arrow_left"
                                app:tint="@color/black" />
                        </LinearLayout>


                        <RelativeLayout
                            android:id="@+id/businessAccountLayout"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:orientation="vertical"
                            android:paddingEnd="12dp">

                            <ImageView
                                android:id="@+id/logoBusiness"
                                android:layout_width="30dp"
                                android:layout_height="30dp"
                                android:layout_alignParentStart="true"
                                android:layout_centerVertical="true"
                                android:layout_marginRight="12dp"
                                android:src="@drawable/img_earnings" />

                            <TextView
                                android:id="@+id/title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toEndOf="@id/logoBusiness"
                                android:fontFamily="@font/poppins_medium"
                                android:text="Update Business"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/subTitle"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/title"
                                android:layout_toEndOf="@+id/logoBusiness"
                                android:fontFamily="@font/poppins_regular"
                                android:text="Update Account"
                                android:textColor="@color/black"
                                android:textSize="13sp" />
                        </RelativeLayout>

                        <LinearLayout
                            android:id="@+id/updateAccountLayout"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_alignParentEnd="true"
                            android:layout_centerVertical="true"
                            android:layout_toEndOf="@id/businessAccountLayout"
                            android:gravity="right"
                            android:paddingHorizontal="15dp"
                            android:paddingVertical="10dp">

                            <ImageView
                                android:id="@+id/updateAccount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:src="@drawable/ic_arrow_right"
                                app:tint="@color/black" />
                        </LinearLayout>

                    </RelativeLayout>
                </androidx.cardview.widget.CardView>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/titleDigitalService"
                        style="@style/AffiliateTitle"
                        android:layout_centerHorizontal="true"
                        android:text="@string/digital_service" />

                    <View
                        style="@style/HorizontalLine"
                        android:layout_marginEnd="15dp"
                        android:layout_toStartOf="@+id/titleDigitalService" />

                    <View
                        style="@style/HorizontalLine"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@+id/titleDigitalService" />

                </RelativeLayout>

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/digitalServiceRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:orientation="horizontal"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="10dp"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    app:reverseLayout="false"
                    tools:itemCount="8"
                    tools:listitem="@layout/layout_item_digital_service_category" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/titleDigitalBusiness"
                        style="@style/AffiliateTitle"
                        android:layout_centerHorizontal="true"
                        android:text="@string/digital_business" />

                    <View
                        style="@style/HorizontalLine"
                        android:layout_marginEnd="15dp"
                        android:layout_toStartOf="@+id/titleDigitalBusiness" />

                    <View
                        style="@style/HorizontalLine"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@+id/titleDigitalBusiness" />

                </RelativeLayout>

                <!--                <View-->
                <!--                    android:layout_width="200dp"-->
                <!--                    android:layout_height="2dp"-->
                <!--                    android:layout_gravity="center"-->
                <!--                    android:layout_marginBottom="10dp"-->
                <!--                    android:background="@color/text_color" />-->

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/digitalBusinessRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="10dp"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:reverseLayout="false"
                    app:spanCount="2"
                    tools:itemCount="6"
                    tools:listitem="@layout/layout_item_digital_business_category" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/titleCommunityWork"
                        style="@style/AffiliateTitle"
                        android:layout_centerHorizontal="true"
                        android:text="@string/our_community_work" />

                    <View
                        style="@style/HorizontalLine"
                        android:layout_marginEnd="15dp"
                        android:layout_toStartOf="@+id/titleCommunityWork" />

                    <View
                        style="@style/HorizontalLine"
                        android:layout_marginStart="15dp"
                        android:layout_toEndOf="@+id/titleCommunityWork" />

                </RelativeLayout>


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/communityWorkRecyclerView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="10dp"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:reverseLayout="false"
                    app:spanCount="3"
                    tools:itemCount="3"
                    tools:listitem="@layout/layout_item_digital_business_category" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>
    </LinearLayout>
</layout>