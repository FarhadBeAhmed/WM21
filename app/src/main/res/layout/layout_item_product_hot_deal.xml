<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_3sdp"
    android:orientation="vertical"
    app:cardBackgroundColor="@color/card_background_color"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:paddingHorizontal="@dimen/_2sdp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_145sdp"
            android:layout_marginHorizontal="@dimen/_4sdp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp">

            <RelativeLayout
                android:id="@+id/h_prButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/h_productImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_centerInParent="true"
                    android:padding="@dimen/_5sdp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/product" />

                <ImageView
                    android:id="@+id/favorite"
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:padding="@dimen/_5sdp"
                    android:src="@drawable/ic_heart_outline"
                    app:tint="@color/primary_red" />

                <LinearLayout
                    android:id="@+id/offerLayout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_8sdp"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:paddingVertical="@dimen/_3sdp"
                    android:background="@drawable/hotdeal_timer_bg"
                    android:paddingHorizontal="@dimen/_5sdp"
                    >
                    <TextView
                        android:id="@+id/offerPercent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="00"
                        android:paddingEnd="@dimen/_2sdp"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        tools:ignore="HardcodedText,RtlSymmetry" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="% OFF"
                        android:textSize="@dimen/_11sdp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        />
                </LinearLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    tools:ignore="RtlSymmetry">

                    <LinearLayout
                        android:id="@+id/hasDates"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/hotdeal_timer_bg"
                        android:gravity="center"
                        android:paddingVertical="2dp"
                        android:visibility="visible">

                        <TextView
                            android:id="@+id/daysId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingHorizontal="2dp"
                            android:text="12"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text=" Days,"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/hourId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingHorizontal="2dp"
                            android:text="12"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text=":"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_15ssp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/minID"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingHorizontal="2dp"
                            android:text="12"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="bold"
                            tools:ignore="HardcodedText" />
                         <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=":"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:gravity="center"
                             android:textColor="@color/white"
                            tools:ignore="HardcodedText" />
                        <TextView
                            android:id="@+id/secID"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12"
                            android:layout_gravity="center"
                            android:textColor="#FFFFFF"
                            android:background="@color/transparent"
                            android:textSize="15sp"
                            android:textStyle="bold"
                            android:paddingHorizontal="2dp"
                            tools:ignore="HardcodedText" />
                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/dateExpired"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/hotdeal_timer_bg"
                        android:gravity="center"
                        android:paddingVertical="2dp"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/hotdeal_timer_bg"
                            android:paddingVertical="1dp"
                            android:text="Expired"
                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textSize="@dimen/_12ssp"
                            android:textStyle="bold" />
                    </LinearLayout>


                </RelativeLayout>

            </RelativeLayout>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/h_productName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:fontFamily="@font/poppins_medium"
            android:paddingHorizontal="@dimen/_3sdp"
            android:paddingTop="3dp"
            android:maxLines="1"
            android:text="Nope Ship Lebanon"
            android:textColor="@color/black"
            android:textSize="@dimen/_10sdp"
            tools:ignore="HardcodedText" />
        <LinearLayout
            android:id="@+id/productRPLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_3sdp"
            tools:ignore="RtlSymmetry">
            <TextView
                android:id="@+id/eshopTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:paddingEnd="5dp"
                android:text="E-Shop"
                android:textAlignment="center"
                android:textColor="@color/gray"
                android:textSize="@dimen/_11ssp"
                tools:ignore="HardcodedText,RtlSymmetry" />

            <TextView
                android:id="@+id/shopNameTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_bold"
                android:paddingEnd="5dp"
                android:text="(Shop Name)"
                android:textAlignment="center"
                android:textColor="@color/primary_red"
                android:textSize="@dimen/_11ssp"
                tools:ignore="HardcodedText,RtlSymmetry" />
            <LinearLayout
                android:id="@+id/rpLayout"
                android:visibility="gone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_bold"
                    android:paddingEnd="5dp"
                    android:text="RP:"
                    android:textAlignment="center"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10ssp"
                    tools:ignore="HardcodedText,RtlSymmetry" />

                <TextView
                    android:id="@+id/productRP"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_regular"
                    android:text="95.00"
                    android:gravity="center_vertical"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_9ssp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="8dp"
            android:orientation="horizontal"
            android:paddingStart="@dimen/_3sdp"
            android:paddingBottom="2dp">

            <TextView
                android:id="@+id/h_productPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:paddingEnd="@dimen/_10sdp"
                android:text="$90.00"
                android:maxLines="1"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="@dimen/_10ssp" />

            <TextView
                android:id="@+id/h_previousPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_regular"
                android:text="$95.00"
                android:maxLines="1"
                android:textColor="@color/gray"
                android:textSize="@dimen/_10ssp" />
        </LinearLayout>

        <TextView
            android:id="@+id/h_addToCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/_5sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:background="@drawable/bg_cart_btn"
            android:fontFamily="@font/poppins_bold"
            android:paddingVertical="@dimen/_4sdp"
            android:text="Add to Cart"
            android:textAlignment="center"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_10ssp"
            tools:ignore="HardcodedText" />
    </LinearLayout>
</androidx.cardview.widget.CardView>