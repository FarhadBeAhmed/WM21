<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/_5sdp"
    android:background="@drawable/layout_border_list_genealogy"
    android:layout_margin="@dimen/_5sdp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="2">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/gateway_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gateway"
                    android:fontFamily="@font/poppins_regular"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    />
                <TextView
                    android:id="@+id/gateway_number_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="(0156464366)"
                    android:textStyle="normal"
                    android:fontFamily="@font/poppins_regular"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_10sdp"
                    />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >
                <TextView
                    android:id="@+id/franchise_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fran: Dhaka"
                    android:fontFamily="@font/poppins_regular"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp"
                    />


            </LinearLayout>



        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"

            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/date_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20-12-2024"
                android:textStyle="bold"
                android:fontFamily="@font/poppins_regular"
                android:textColor="@color/black"
                android:textSize="@dimen/_12sdp"
                />
            <TextView
                android:id="@+id/time_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="05:00:20 PM"
                android:textStyle="normal"
                android:fontFamily="@font/poppins_regular"
                android:layout_marginLeft="@dimen/_5sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_10sdp"
                />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/withdraw_amount_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Withd: 250000.00"
            android:fontFamily="@font/poppins_regular"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp"
            />
        <TextView
            android:id="@+id/receive_amount_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Receive: 250000.00"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginLeft="@dimen/_8sdp"
            android:textStyle="normal"
            android:textColor="@color/black"
            android:textSize="@dimen/_11sdp"
            />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/info_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="info: Confirm"
            android:fontFamily="@font/poppins_regular"
            android:textStyle="normal"
            android:textColor="@color/green"
            android:textSize="@dimen/_11sdp"
            />
        <TextView
            android:id="@+id/action_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Action: Success"
            android:fontFamily="@font/poppins_regular"
            android:layout_marginLeft="@dimen/_8sdp"
            android:textStyle="normal"
            android:textColor="@color/green"
            android:textSize="@dimen/_11sdp"
            />

    </LinearLayout>
    <TextView
        android:id="@+id/ac_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ac: Success"
        android:fontFamily="@font/poppins_regular"
        android:textStyle="normal"
        android:textColor="@color/black"
        android:textSize="@dimen/_11sdp"
        />


</LinearLayout>