<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            app:cardCornerRadius="5dp"
            app:cardElevation="3dp"
            app:cardMaxElevation="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/productImage"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentStart="true"
                        android:scaleType="fitCenter"
                        android:src="@drawable/product"
                        tools:ignore="ContentDescription" />

                    <LinearLayout
                        android:id="@+id/prNameLayoutID"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@id/productImage"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/productName"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="4"
                            android:fontFamily="@font/poppins_medium"
                            android:maxLines="2"
                            android:paddingStart="10dp"
                            android:text="Ceiling Fan (Deluxe)"
                            android:textColor="@color/text_color"
                            android:textSize="14sp"
                            tools:ignore="HardcodedText,RtlSymmetry" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="2"
                            tools:ignore="RtlSymmetry">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="center"
                                android:text="Invoice: "
                                android:textColor="@color/primary_red"
                                android:textSize="11sp"
                                tools:ignore="HardcodedText" />

                            <TextView
                                android:id="@+id/productInvoice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="center"
                                android:paddingStart="5dp"
                                android:text="110523420"
                                android:textColor="@color/primary_red"
                                android:textSize="11sp"
                                tools:ignore="HardcodedText,RtlSymmetry" />
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/prNameLayoutID"
                        android:layout_toEndOf="@id/productImage">

                        <TextView
                            android:id="@+id/shopName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:paddingStart="10dp"
                            android:text="Future Vision Enterprise"
                            android:textColor="@color/green"
                            android:textSize="12sp"

                            tools:ignore="HardcodedText,RtlSymmetry" />

                        <TextView
                            android:id="@+id/mobileNumber"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:paddingStart="10dp"
                            android:text="01XXXXXXXXX"
                            android:textColor="@color/green"
                            android:textSize="13sp"

                            tools:ignore="HardcodedText,RtlSymmetry" />

                    </LinearLayout>


                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="10dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">


                        <TextView
                            android:id="@+id/proPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:text="2356.00"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            tools:ignore="HardcodedText,TouchTargetSizeCheck" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:paddingHorizontal="5dp"
                            android:text="X"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            tools:ignore="HardcodedText,TouchTargetSizeCheck" />

                        <TextView
                            android:id="@+id/productQuantity"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center_vertical"
                            android:maxLength="3"
                            android:maxLines="1"
                            android:text="00"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            tools:ignore="HardcodedText,TouchTargetSizeCheck" />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center_vertical"
                            android:maxLength="3"
                            android:maxLines="1"
                            android:paddingStart="10dp"
                            android:text="RP:"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            tools:ignore="HardcodedText,TouchTargetSizeCheck" />

                        <TextView
                            android:id="@+id/productRP"
                            android:layout_width="wrap_content"
                            android:layout_height="20dp"
                            android:layout_gravity="center_vertical"
                            android:fontFamily="@font/poppins_medium"
                            android:gravity="center_vertical"
                            android:maxLines="1"
                            android:paddingHorizontal="10dp"
                            android:text="00.00"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            tools:ignore="HardcodedText,TouchTargetSizeCheck" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/rpAdjusted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:background="@color/gray"
                        android:paddingHorizontal="5dp"
                        android:paddingVertical="2dp"
                        android:text="RP is Adjusted"
                        android:textColor="@color/white"
                        android:visibility="gone"
                        tools:ignore="HardcodedText" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="Tk. "
                            android:textColor="#FE0000"
                            android:textSize="13sp"

                            tools:ignore="HardcodedText" />

                        <TextView
                            android:id="@+id/singleProductTotalPrice"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/poppins_medium"
                            android:text="100.00"
                            android:textColor="#FE0000"
                            android:textSize="13sp"

                            tools:ignore="HardcodedText" />

                    </LinearLayout>

                </RelativeLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</layout>