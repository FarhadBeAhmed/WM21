<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <View
            android:layout_width="0.7dp"
            android:layout_height="match_parent"
            android:background="#2525" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/txt_rowTeamInfo_SL"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.2"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="1"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <View
                android:layout_width="0.7dp"
                android:layout_height="match_parent"
                android:background="#2525" />

            <TextView
                android:id="@+id/txt_rowTeamInfo_Name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:ellipsize="end"
                android:maxLines="1"
                android:minLines="1"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="Total ID"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <View
                android:layout_width="0.7dp"
                android:layout_height="match_parent"
                android:background="#2525" />

            <TextView
                android:id="@+id/txt_rowTeamInfo_TeamA"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:gravity="center"
                android:text="2511"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <View
                android:layout_width="0.7dp"
                android:layout_height="match_parent"
                android:background="#2525" />

            <TextView
                android:id="@+id/txt_rowTeamInfo_TeamB"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="9591"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <View
                android:layout_width="0.7dp"
                android:layout_height="match_parent"
                android:background="#2525" />

            <TextView
                android:id="@+id/txt_rowTeamInfo_Total"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.4"
                android:gravity="center"
                android:paddingTop="8dp"
                android:paddingBottom="8dp"
                android:text="2511"
                android:textColor="@color/black"
                android:textSize="14sp" />

        </LinearLayout>

        <View
            android:layout_width="0.7dp"
            android:layout_height="match_parent"
            android:background="#2525" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.7dp"
        android:background="#2525" />

</LinearLayout>
